services:
  squeezelite:
    restart: unless-stopped
    image: giof71/squeezelite:latest
    network_mode: "host"
    user: "{{ squeezelite_user_uid }}:{{ squeezelite_user_gid }}"
    group_add:
      - "{{ audio_gid }}"
    devices:
      - /dev/snd:/dev/snd
    environment:
      - SQUEEZELITE_AUDIO_DEVICE=hw:CARD=sndrpihifiberry
      - SQUEEZELITE_NAME={{ ansible_hostname }}
      - SQUEEZELITE_RATES=44100-192000
